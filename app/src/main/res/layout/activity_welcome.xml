<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.yyz.zhonghuasuan.welcome.view.WelcomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/welcome_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:background="@color/transparent"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/welcome_container"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
    </LinearLayout>
    <Button
        android:textSize="16sp"
        android:textColor="@color/white"
        android:id="@+id/welcome_enter_btn"
        android:text="@string/welcome_enter_btn"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welcome_enter_btn"
        android:onClick="startUse"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@id/welcome_container"
        />
</RelativeLayout>
