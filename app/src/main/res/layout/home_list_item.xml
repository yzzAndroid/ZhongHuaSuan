<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:id="@+id/list_item_img"
        />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/list_item_img"
        android:layout_alignTop="@id/list_item_img"
        android:layout_alignBottom="@id/list_item_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:text="sss"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_name"
            />
        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/point_select"
            android:layout_centerVertical="true"
            android:text="sss"
            />
        <TextView
            android:textSize="13sp"
            android:layout_toRightOf="@id/list_item_price"
            android:id="@+id/list_item_price_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/point_select"
            android:layout_centerVertical="true"
            android:text="@string/price_back"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:textSize="13sp"
            android:layout_toRightOf="@id/list_item_price_back"
            android:id="@+id/list_item_price_back_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/point_select"
            android:layout_centerVertical="true"
            android:text="@string/price_back"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_price_origin"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_num_part"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/point_select"
            android:textSize="13sp"
            android:layout_toRightOf="@id/item_price_origin"
            />
        <TextView
            android:text="@string/home_list_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_num_part_line"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/item_num_part"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_num"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/item_num_part_line"
            />
        <TextView
            android:text="@string/home_list_fen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_num_fen"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textSize="13sp"
            android:layout_toRightOf="@id/item_num"
            />

        <Button
            android:textColor="@color/white"
            android:text="@string/home_item_btn_text"
            android:layout_width="80dp"
            android:layout_height="30sp"
            android:background="@drawable/home_item_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</RelativeLayout>