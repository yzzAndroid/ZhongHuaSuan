<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.yyz.zhonghuasuan.home.view.NewsNoticeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:onClick="back"
            android:id="@+id/newsNotice_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/head_icon_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsNotice_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_noyice_left_select_shap"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/today"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/newsNotice_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/news_noyice_right_unselect_shap"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/tomorrow"
                android:textColor="@color/point_select" />

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newsNotice_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>
