<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:id="@+id/recommend_dialog_item_root"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/recommend_father"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recommend_dialog"
        android:orientation="vertical">


        <TextView
            android:id="@+id/recommend_dialog_f"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/recommend_default_f"
            android:textColor="@color/point_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/point_select" />

        <TextView
            android:id="@+id/recommend_dialog_l"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/recommend_l"
            android:textColor="@color/point_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/point_select" />

        <TextView
            android:id="@+id/recommend_dialog_m"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/recommend_m"
            android:textColor="@color/point_select" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/point_select" />

        <TextView
            android:id="@+id/recommend_dialog_like"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/recommend_like"
            android:textColor="@color/point_select" />


    </LinearLayout>

    <TextView
        android:id="@+id/recommend_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/recommend_dialog"
        android:gravity="center"
        android:text="@string/cancel" />


</LinearLayout>