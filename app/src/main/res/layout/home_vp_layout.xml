<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/help_scrollview"
    android:descendantFocusability="blocksDescendants"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp"
        android:layout_width="match_parent"
        android:layout_height="180dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:background="@color/transparent"
        android:id="@+id/home_vp_point"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_alignBottom="@id/home_vp"
        android:layout_marginBottom="20dp"
        >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/help_layout"
        android:layout_below="@id/home_vp"
        android:background="@color/point_select"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="@string/home_help"
            />
        <ImageView
            android:id="@+id/help_img"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_list_down"
            />
    </RelativeLayout>
</RelativeLayout>